<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MusicPlayer$DummySectionFragment"
    android:id="@+id/player_layout">

    <TextView
        android:id="@+id/column_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="slower / faster"
        android:singleLine="true"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="softer / harder"
            android:id="@+id/row_label"
            android:layout_below="@+id/column_label"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="57dp"
            android:gravity="fill_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" --"
            android:id="@+id/current_song"
            android:layout_alignParentBottom="false"
            android:layout_alignLeft="@+id/row_label"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/placeOnMap"
            android:textSize="14dp"
            android:layout_alignParentLeft="false"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/controlView"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/current_song"
            android:layout_marginBottom="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 0"
            android:id="@+id/track_counter"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place current song on map"
            android:id="@+id/placeOnMap"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="12dp"
            android:layout_marginBottom="-8dp"/>

</RelativeLayout>
